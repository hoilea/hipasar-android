<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Material Styles -->

  <style name="App.TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1"/>
  <style name="App.TextAppearance.Subtitle1.Colored.Error" parent="App.TextAppearance.Subtitle1">
    <item name="android:textColor">@color/red_darker</item>
  </style>
  <style name="App.TextAppearance.Subtitle1.Bold" parent="App.TextAppearance.Subtitle1">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="App.TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2" />

  <style name="App.TextAppearance.Subtitle2.Colored.Green" parent="App.TextAppearance.Subtitle2">
    <item name="android:textColor">@color/green_dark</item>
  </style>

  <style name="App.TextAppearance.Subtitle2.Colored.Green.Bold">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="App.TextAppearance.Subtitle2.Bold" parent="App.TextAppearance.Subtitle2">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="App.TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>
  <style name="App.TextAppearance.Headline6.Bold" parent="App.TextAppearance.Headline6">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="App.TextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="android:textColor">?attr/colorOnSurface</item>
  </style>
  <style name="App.TextAppearance.Headline5.Bold">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="App.TextAppearance.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="App.TextAppearance.Headline4.Bold">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="App.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption" />
  <style name="App.TextAppearance.Caption.Bold" parent="App.TextAppearance.Caption">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="App.TextAppearance.Overline" parent="TextAppearance.MaterialComponents.Overline" />


  <!-- Widget Styles -->

  <style name="App.Widget.TabLayout" parent="Widget.MaterialComponents.TabLayout">
    <item name="materialThemeOverlay">@style/App.ThemeOverlay.TabLayout</item>
  </style>

  <style name="App.Widget.Button.Filled.Colored" parent="Widget.MaterialComponents.Button">
    <item name="android:backgroundTint">?attr/buttonColor</item>
    <item name="android:textAllCaps">false</item>
<!--    <item name="android:insetTop">0dp</item>-->
<!--    <item name="android:insetBottom">0dp</item>-->
    <item name="android:textAppearance">@style/App.TextAppearance.Headline6.Bold</item>
    <item name="cornerRadius">@dimen/edit_text_corner_radius</item>
  </style>

  <style name="App.Widget.Button.Filled.Colored.Red">
    <item name="android:backgroundTint">@color/red_900_dark</item>
  </style>

  <style name="App.Widget.Button.Outlined.Colored" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="strokeColor">?attr/buttonColor</item>
    <item name="android:textColor">?attr/buttonColor</item>
<!--    <item name="android:insetTop">0dp</item>-->
<!--    <item name="android:insetBottom">0dp</item>-->
  </style>

  <style name="App.Widget.Button.Outlined.Text.Colored.Red" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="strokeColor">@color/red_900_dark</item>
    <item name="android:textColor">@color/red_900_dark</item>
<!--    <item name="android:insetTop">0dp</item>-->
<!--    <item name="android:insetBottom">0dp</item>-->
  </style>

  <style name="App.Widget.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">?attr/buttonColor</item>
  </style>

  <style name="App.Widget.Card.Label" parent="">
    <item name="cardCornerRadius">4dp</item>
    <item name="cardElevation">0dp</item>
    <item name="contentPaddingLeft">4dp</item>
    <item name="contentPaddingRight">4dp</item>
    <item name="contentPaddingTop">2dp</item>
    <item name="contentPaddingBottom">2dp</item>
  </style>

  <style name="App.Widget.EditText.Search" parent="">
    <item name="android:textAppearance">@style/App.TextAppearance.Subtitle1</item>
    <item name="hintTextAppearance">@style/App.TextAppearance.Subtitle1</item>
  </style>

</resources>