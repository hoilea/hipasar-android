<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="16dp"
  android:paddingStart="16dp"
  android:paddingEnd="16dp">
  <View
    android:id="@+id/product_image_card"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@color/grey_100_dark"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  <LinearLayout
    android:id="@+id/center_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/end_container"
    app:layout_constraintStart_toEndOf="@id/product_image_card"
    app:layout_constraintTop_toTopOf="parent">
    <View
      android:layout_width="wrap_content"
      android:layout_height="24dp"
      android:background="@color/grey_100_dark"/>
    <Space
      android:layout_width="wrap_content"
      android:layout_height="4dp" />
    <View
      android:layout_width="wrap_content"
      android:layout_height="24dp"
      android:background="@color/grey_100_dark"/>
  </LinearLayout>
  <LinearLayout
    android:id="@+id/end_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <View
      android:layout_width="56dp"
      android:layout_height="24dp"
      android:background="@color/grey_100_dark"/>
    <Space
      android:layout_width="wrap_content"
      android:layout_height="4dp" />
    <View
      android:id="@+id/product_title"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:background="@color/grey_100_dark"/>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>